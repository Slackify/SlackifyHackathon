<!DOCTYPE html>
<html lang="en" dir="ltr">
{{>header}}
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<body>
<section id="title">
    <div class="container-fluid">

        {{!-- <div class="row">
            <div class="col-lg-7">
            </div>
        </div> --}}
    </div>
</section>
<section id="features">
        <div class="form-group">
            <label for="exampleInputEmail1">Enter text to Slackify:</label>
            <input type="text" class="form-control" id="textInput" placeholder="your message">
            <small id="emailHelp" class="form-text text-muted">We won't send it just yet, you can approve your message first</small>
        </div>
        <button type="submit" class="btn btn-primary" id="convert">Slackify!</button>
    <div id='emojiMessage'></div>
</section>
<section id="testimonials">
    <div id="testimonial-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <h2>I no longer have to visit my local dealership. I've found the hottest Virtual Dealership in town.
                    Pow!</h2>
                <img class="testimonial-image" src="/img/boy.svg" alt="man-profile">
                <em>Chad, London</em>
            </div>
            <div class="carousel-item">
                <h2 class="testimonial-text">My life used to be so lonely, but with Virtual Dealership, I have been
                    buzzing all the time. I think.</h2>
                <img class="testimonial-image" src="/img/girl.svg" alt="lady-profile">
                <em>Tracy, Warrington</em>
            </div>
        </div>
        <a class="carousel-control-prev" href="#testimonial-carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon"></span> </a>
        <a class="carousel-control-next" href="#testimonial-carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon"></span></a>
    </div>
</section>
<section id="tryNow">
    <div class="container">
        <h2>Inventory</h2>
        <div class="row">
            {{#each carData}}
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        {{!-- <img class="card-img-top" src={{this.imageURL.[0].outsideImage}} alt="Card image cap"> --}}
                        <img class="card-img-top"
                             src={{this.imageURL.[0].outsideImage}}
                             alt="Card image cap">
                        <div class="card-body">
                            <h3>{{this.model.modelId}}</h3>
                            <p class="card-text">This is a very cool car description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary"
                                       href="/car/{{this.inventoryId}}">View</a>
                                </div>
                                <small class="text-muted">{{this.availability}}</small>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>
<!-- Call to Action -->
<section id="cta">
    <div class="container">
        <h3 class="cta-heading">Find your destined cars today</h3>
        <button type="button" class="btn btn-dark btn-lg download-button"><i class="fab fa-apple"></i>
            Mobile App
        </button>
        <button type="button" class="btn btn-light btn-lg download-button"><i class="fab fa-google-play"></i>
            Coming Soon
        </button>
    </div>
</section>

    <script src="./js/convertTextToEmoji.js"></script>
</body>
{{>footer}}
</html>